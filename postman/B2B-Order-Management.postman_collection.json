							"// Dönen response'u JSON olarak al",
							"let response = pm.response.json();",
							"",
							"// Eğer access_token varsa, env değişkenine kaydet",
							"if (response.data.access_token) {",
							"    pm.environment.set(\"token\", response.data.access_token);",
							"    console.log(\"Token kaydedildi:\", response.data.access_token);",
